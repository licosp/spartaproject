{
  "autoDocstring.docstringFormat": "google",
  "debug.console.fontFamily": "editor",
  "debug.console.fontSize": 13,
  "editor.codeActionsOnSave": { "source.organizeImports": "explicit" },
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.fontFamily": "UDEV Gothic JPDOC",
  "editor.fontSize": 15,
  "editor.formatOnSave": true,
  "editor.minimap.enabled": false,
  "editor.renderWhitespace": "all",
  "editor.rulers": [79],
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": "string.quoted.docstring.multi.python",
        "settings": {
          "foreground": "#ffBB00"
        }
      }
    ]
  },
  "explorer.confirmDragAndDrop": false,
  "explorer.excludeGitIgnore": false,
  "extensions.ignoreRecommendations": false,
  "files.exclude": {
    "**/__pycache__/**": true,
    "**/.mypy_cache/**": true,
    "**/.pytest_cache/**": true,
    "**/.ruff_cache/**": true
  },
  "git.autoRepositoryDetection": "openEditors",
  "git.inputValidation": true,
  "liveServer.settings.NoBrowser": true,
  "liveServer.settings.root": "/docs",
  "mypy-type-checker.args": ["--config-file=pyproject.toml"],
  "prettier.configPath": ".vscode/.prettierrc.toml",
  "prettier.ignorePath": ".vscode/.prettierignore",
  "prettier.requireConfig": true,
  "pythonTestExplorer.testFramework": "pytest",
  "python.analysis.diagnosticMode": "workspace",
  "python.analysis.extraPaths": [
    "packages/pyspartalib/src",
    "packages/pyspartaimg/src"
  ],
  "python.analysis.typeCheckingMode": "strict",
  "python.languageServer": "Pylance",
  "ruff.configuration": "pyproject.toml",
  "search.useIgnoreFiles": false,
  "search.exclude": { "**/.venv/**": true },
  "terminal.integrated.fontSize": 14,
  "testing.automaticallyOpenTestResults": "neverOpen",
  "testing.gutterEnabled": true,
  "workbench.colorTheme": "Dracula Theme",
  "workbench.editor.enablePreview": false,
  "workbench.startupEditor": "none",
  "[python]": { "editor.defaultFormatter": "charliermarsh.ruff" }
}
