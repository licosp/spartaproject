{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "python_launcher",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}${pathSeparator}${env:PYTHONPATH}"
      },
      "console": "internalConsole",
      "internalConsoleOptions": "neverOpen"
    }
  ]
}
